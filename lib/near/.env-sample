# Sample .env file for NEAR Node Runner

# AWS
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1

# Deployment mode: single | ha | both
DEPLOY_MODE=ha

# NEAR specifics
NEAR_NETWORK=mainnet
NEAR_VERSION=v1.38.1
SNAPSHOT_URL=https://s3.amazonaws.com/near-snapshots/mainnet.tar.gz

# Instance sizing
NEAR_INSTANCE_TYPE=m7g.2xlarge
CPU_TYPE=arm_64

# Data volume
NEAR_DATA_VOL_SIZE=1024
NEAR_DATA_VOL_TYPE=gp3
NEAR_DATA_VOL_IOPS=6000
NEAR_DATA_VOL_THROUGHPUT=250

# HA settings
NUMBER_OF_RPC_NODES=2
ALB_HEALTHCHECK_GRACE_MIN=10
HEARTBEAT_DELAY_MIN=60
LIMIT_OUT_TRAFFIC_MBPS=1000 